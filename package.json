{
  "version": "1.1.0",
  "name": "spark",
  "scripts": {
    "build": "next build",
    "start": "node server.js",
    "export": "yarn build && next export",
    "lint": "eslint ./pages ./src && sass-lint",
    "cm": "git-cz",
    "release": "corp-semantic-release --pre-commit lint",
    "test": "NODE_ENV=test jest --no-cache --watch",
    "test-ci": "jest --coverage",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "storybook": "start-storybook -p 6006"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest-config/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest-config/assetsTransformer.js",
      "\\.(sass|scss|css|less)$": "<rootDir>/jest-config/assetsTransformer.js"
    },
    "collectCoverageFrom": [
      "pages/*.js",
      "src/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "validate-commit-msg"
    }
  },
  "author": "Daftup",
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-sass": "^1.0.1",
    "babel-plugin-root-import": "^6.1.0",
    "bem-modifiers": "^1.0.6",
    "cssnano": "^4.1.4",
    "dotenv": "^6.0.0",
    "file-loader": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml-loader": "^1.0.0",
    "next": "^7.0.1",
    "node-normalize-scss": "^8.0.0",
    "node-sass": "^4.9.3",
    "raven-js": "^3.27.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-thunk": "^2.3.0",
    "sass-lint": "^1.12.1",
    "sw-precache-webpack-plugin": "^0.11.5",
    "webpack": "^4.20.2"
  },
  "devDependencies": {
    "@emotion/core": "^0.13.1",
    "@storybook/react": "^4.0.0-alpha.24",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "commitizen": "^3.0.2",
    "corp-semantic-release": "^6.4.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "react-test-renderer": "^16.5.2",
    "validate-commit-msg": "^2.14.0"
  }
}
