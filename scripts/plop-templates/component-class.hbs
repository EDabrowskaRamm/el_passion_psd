import React from 'react'
import PropTypes from 'prop-types'
{{#if renderViewComponent}}

import {{properCase name}}View from '~/{{directory}}/{{properCase name}}/{{properCase name}}View'
{{else}}
import { Root } from '~/{{directory}}/{{properCase name}}/{{properCase name}}{{properCase shardSuffix}}.shards'
{{/if}}

export default class {{properCase name}}{{nameSuffix}} extends React.Component {
  static propTypes = {
    usePropTypes: PropTypes.object.isRequired
  }

  render () {
    return (
      {{#if renderViewComponent}}
      <{{properCase name}}View />
      {{else}}
      <Root>
        This is the {{properCase name}}{{#if includeSuffixInClass}}{{properCase nameSuffix}}{{/if}} component!
      </Root>
      {{/if}}
    )
  }
}
