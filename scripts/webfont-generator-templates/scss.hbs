@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
}

@mixin {{classPrefix}}-font-base {
  font-family: '{{fontName}}' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

[class^="{{classPrefix}}-"], [class*=" {{classPrefix}}-"] {
  @include {{classPrefix}}-font-base;
}

{{#each codepoints}}
%{{../classPrefix}}-abstract-{{@key}},
.{{../classPrefix}}-{{@key}}:before {
	content: "\\{{this}}";
}
{{/each}}
